<html>
    <head>
        <title> Add a Recipe </title>
        <script src="@Url.Content("/js/recipeFormJS.js")"></script>
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/lib/bootstrap/bootstrap.css")" media="screen"/>
        <!---<link rel="stylesheet" type="text/css" href="@Url.Content("~/css/recipeFormStyles.css")" media="screen" />-->
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/recipeFormStyles.css")" media="screen" />

    </head>
    <body>
        <div class="jumbotron text-center"> 
            <container> 
                <h1>Add A Recipe</h1>
            </container>
        </div>

        <form>
            <div class="panel panel-default">
                <div class="panel-heading">
                Name
                </div>
                <div class="panel-body">
                    <input type="text" class="form-control"  placeholder="Name of Recipe" name="recipe"><br>
                </div> 
                <div class="panel-heading">
                    Difficulty
                 </div>
                <div class="panel-body">
                    <smallerText>
                    Easy    <input type="radio" name="difficulty" value="easy"><br>
                    Intermediate  <input type="radio" name="difficulty" value="intermediate"><br>
                    Hard <input type="radio" name="difficulty" value="hard"><br>
                    </smallerText>
                </div>
                <div class="panel-heading">
                    Servings
                </div>
                <div class="panel-body">
                    <input type="text" class="form-control" placeholder="Number of Servings" name="servings"><br>
                </div>
                <div class="panel-heading">
                    Time
                </div>
                <div class="panel-body">
                    <smallerText>
                    Prep
                    <br><input type="text" class="form-control" placeholder="Minutes to Completion" name="prepMins"><br>
                    Cook
                    <br><input type="text" class="form-control" placeholder="Minutes to Completion" name="cookMins"><br>
                    Ready In
                    <br><input type="text" class="form-control" placeholder="Minutes to Completion" name="readyMins"><br>
                    </smallerText>
                </div>
                <div class="panel-heading">
                    Ingredients
                </div>
                <div class="panel-body">
                    <div id="ingredients">
                        <input type="text" class="form-control" placeholder="Ingredient" name="ingredients"><br>
                        <input type="text" class="form-control" placeholder="Ingredient" name="ingredients"><br>
                        <input type="text" class="form-control" placeholder="Ingredient" name="ingredients"><br>
                        <input type="text" class="form-control" placeholder="Ingredient" name="ingredients"><br>
                    </div>
                    <input type="button" class="btn" value="Add Another Ingredient" onClick="addInput('ingredients', 'Ingredient');"><br>
                </div>
                <div class="panel-heading">
                    Steps
                </div>
                <div class="panel-body">
                    <div id="steps">
                        <textarea class="form-control" placeholder="Step 1" name="steps"></textarea><br>
                        <textarea class="form-control" placeholder="Step 2" name="steps"></textarea><br>
                        <textarea class="form-control" placeholder="Step 3" name="steps"></textarea><br>
                        <textarea class="form-control" placeholder="Step 4" name="steps"></textarea><br>
                    </div>
                    <input type="button" class="btn" value="Add Another Step" onClick="addStep('steps', 'Step');"><br>
                </div>
                <div class="panel-heading">
                    Special Tools Needed
                </div>
                <div class="panel-body">
                    <div id="tools">
                        <input type="text" class="form-control" placeholder="Tool" name="tools"><br>
                    </div>
                    <input type="button" class="btn" value="Add Another Tool" onClick="addInput('tools', 'Tool');"><br>
                </div>
                <div class="panel-heading">
                    Description of meal
                </div>
                <div class="panel-body">
                    <textarea class="form-control" placeholder="Description of Meal" name="description"></textarea><br>
<!--                    <div class="backImgDesc">
                        Upload Photo of Meal
                    </div>
                    <br><input type="file" name="image"><br>     -->       
                </div>
                <div class="panel-heading">
                    Nutrition Facts (Per Serving)
                </div>
                <div class="panel-body">
                    <input type="number" class="form-control" placeholder="Calories" name="calories"><br>
                    <input type="number" class="form-control" placeholder="Fat in grams" name="fat"><br>
                    <input type="number" class="form-control" placeholder="Protein in grams" name="protein"><br>
                    <input type="number" class="form-control" placeholder="Carbohydrates in grams" name="carbohydrates"><br>
                </div>
                <div class="panel-heading">
                    Author
                </div>
                <div class="panel-body">
                    <input type="text" class="form-control" placeholder="Name of Author" name="author"><br>
                </div>
            </div> 
            <div class="text-center">
                    <input type="submit" class="btn btn-lg" value="Submit Form">
            </div> 
       </form>
    </body>
</html>
